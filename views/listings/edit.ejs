<% layout("/layouts/boilerplate.ejs") -%>

    <style>
        input {
            border: 1px solid green;
            border-radius: 10px;
        }
        h2 {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <br>
    <div class="row offset-1">
    <div class="content_index">
        <h2>Edit Listing</h2>
        <div class="col-md-8 ">
        <form method="POST" action="/listings/<%=listing._id%>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label"><b>Title</b></label>
            <input name="title" placeholder="Enter title" type="text" class="form-control" value="<%=listing.title%>" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Title</div>
        </div>
        <br>
        <div>
            <label for="description" class="form-label"><b>Description</b></label>
            <textarea name="description" placeholder="Enter Description" rows="2" cols="25" class="form-control" required><%=listing.description%></textarea>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter a short description</div>
        </div>
        <br>
        <div>
            <p>Original Image</p>
            <img src="<%=listing.image.url%>" height="250px" width="250px" style="object-fit: cover;">
        </div>
        <br>
        <div>
            <label for="image" class="form-label"><b>Upload Image File</b></label>
            <input name="image" type="file" placeholder="Enter Image URL" class="form-control">
        </div>
        <br>
        <div>
            <label for="price" class="form-label"><b>Price</b></label>
            <input name="price" type="number"  placeholder="Enter Price" class="form-control" value="<%=listing.price%>" required> 
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Price</div>
        </div>
        <br>
        <div>
            <label for="location" class="form-label"><b>Location</b></label>
            <input name="location" type="text"  placeholder="Enter Location" class="form-control" value="<%=listing.location%>" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <br>
        <div>
            <label for="country" class="form-label"><b>Country</b></label>
            <input name="country" type="text"  placeholder="Enter Country" class="form-control" value="<%=listing.country%>" 
            required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter Valid Country</div>
        </div>
        <br>
        <button class="btn btn-dark edit-btn">Submit</button>
         <!-- <button>Submit</button> -->
    </form>
    </div>
    </div>
    </div>
</body>